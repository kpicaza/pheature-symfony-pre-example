{% extends 'base.html.twig' %}

{% block title %}Site A - Homepage{% endblock %}

{% block heading %}
    <div class="jumbotron">
        <div class="container">
            <h1 class="display-4 text-center">
                {% if is_feature_enabled('show_brand_logo') %}
                    <i class="material-icons">pets</i>
                {% endif %}
                {% if is_feature_enabled('show_commercial_name') %}
                    My Little Friend Shop
                {% else %}
                    Welcome to Site A
                {% endif %}
            </h1>
            <hr class="my-4">
            <p class="lead text-center">
                <a class="btn btn-primary btn-lg" href="#" role="button">The Amigurumi artisan Shop</a>
            </p>
        </div>
    </div>
{% endblock %}

{% block body %}
    {% if is_feature_enabled('show_home_dynamic_catalog') %}
        <div class="text-center">
            {% for product in catalog %}
                <img src="/images/uploads/{{ product.picture }}"/>
            {% endfor %}
        </div>
    {% else %}
        <div class="text-center">
            <img src="/images/pink-doll.png"/>
            <img src="/images/ice-cream.png"/>
            <img src="/images/red-rabbit.png"/>
        </div>
    {% endif %}

    {% if is_feature_enabled('show_contact_info') %}
        <div class=" text-center mt-5">
            <i class="material-icons">twitter</i>
            <p class="lead">Make your order via DM at <strong>@amigunerumi</strong>'s Twitter account.</p>
        </div>
    {% endif %}
{% endblock %}
